    { name: 'PRINCIPAL', href: '/' },
    { name: 'PONENTES', href: '/about' },
    { name: 'CRONOGRAMA', href: '/contact' },
    { name: 'TALLERES', href: '/blog' },
    { name: 'CONCURSOS', href: '/blog' },
